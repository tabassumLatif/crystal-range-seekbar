<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Common attributes -->
    <attr name="cs_corner_radius" format="float" />
    <attr name="cs_min_value" format="float" />
    <attr name="cs_max_value" format="float" />
    <attr name="cs_min_start_value" format="float" />
    <attr name="cs_max_start_value" format="float" />
    <attr name="cs_steps" format="float" />
    <attr name="cs_gap" format="float" />
    <attr name="cs_fix_gap" format="float" />
    <attr name="cs_bar_color_mode" format="enum">
        <enum name="solid" value="0" />
        <enum name="gradient" value="1" />
    </attr>
    <attr name="cs_bar_color" format="color" />
    <attr name="cs_bar_gradient_start" format="color" />
    <attr name="cs_bar_gradient_end" format="color" />
    <attr name="cs_bar_highlight_color_mode" format="enum">
        <enum name="solid" value="0" />
        <enum name="gradient" value="1" />
    </attr>
    <attr name="cs_bar_highlight_color" format="color" />
    <attr name="cs_bar_highlight_gradient_start" format="color" />
    <attr name="cs_bar_highlight_gradient_end" format="color" />
    <attr name="cs_thumb_diameter" format="dimension"/>
    <attr name="cs_position" format="enum">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <attr name="cs_data_type" format="enum">
        <enum name="_long" value="0" />
        <enum name="_double" value="1" />
        <enum name="_integer" value="2" />
        <enum name="_float" value="3" />
        <enum name="_short" value="4" />
        <enum name="_byte" value="5" />
    </attr>
    <attr name="cs_bar_height" format="dimension"/>
    <attr name="cs_seek_bar_touch_enabled" format="boolean" />

    <!-- Seekbar -->
    <declare-styleable name="CrystalSeekbar" >
        <attr name="cs_corner_radius" />
        <attr name="cs_min_value" />
        <attr name="cs_max_value" />
        <attr name="cs_min_start_value" />
        <attr name="cs_max_start_value" />
        <attr name="cs_steps" />
        <attr name="cs_gap" />
        <attr name="cs_fix_gap" />
        <attr name="cs_bar_height" />
        <attr name="cs_bar_color_mode" />
        <attr name="cs_bar_color" />
        <attr name="cs_bar_gradient_start" />
        <attr name="cs_bar_gradient_end" />
        <attr name="cs_bar_highlight_color_mode" />
        <attr name="cs_bar_highlight_color" />
        <attr name="cs_bar_highlight_gradient_start" />
        <attr name="cs_bar_highlight_gradient_end" />
        <attr name="cs_thumb_diameter" />
        <attr name="cs_position" />
        <attr name="cs_data_type" />
        <attr name="cs_thumb_color" format="color" />
        <attr name="cs_thumb_color_pressed" format="color" />
        <attr name="cs_thumb_image" format="reference" />
        <attr name="cs_thumb_image_pressed" format="reference" />
        <attr name="cs_seek_bar_touch_enabled" />
    </declare-styleable>

    <!-- Range Seekbar -->
    <declare-styleable name="CrystalRangeSeekbar" >
        <attr name="cs_corner_radius" />
        <attr name="cs_min_value" />
        <attr name="cs_max_value" />
        <attr name="cs_min_start_value" />
        <attr name="cs_max_start_value" />
        <attr name="cs_steps" />
        <attr name="cs_gap" />
        <attr name="cs_fix_gap" />
        <attr name="cs_bar_height"/>
        <attr name="cs_bar_color_mode" />
        <attr name="cs_bar_color" />
        <attr name="cs_bar_gradient_start" />
        <attr name="cs_bar_gradient_end" />
        <attr name="cs_bar_highlight_color_mode" />
        <attr name="cs_bar_highlight_color" />
        <attr name="cs_bar_highlight_gradient_start" />
        <attr name="cs_bar_highlight_gradient_end" />
        <attr name="cs_thumb_diameter" />
        <attr name="cs_position" />
        <attr name="cs_data_type" />
        <attr name="cs_left_thumb_color" format="color" />
        <attr name="cs_left_thumb_color_pressed" format="color" />
        <attr name="cs_left_thumb_image" format="reference" />
        <attr name="cs_left_thumb_image_pressed" format="reference" />
        <attr name="cs_right_thumb_color" format="color" />
        <attr name="cs_right_thumb_color_pressed" format="color" />
        <attr name="cs_right_thumb_image" format="reference" />
        <attr name="cs_right_thumb_image_pressed" format="reference" />
        <attr name="cs_seek_bar_touch_enabled" />
    </declare-styleable>
</resources>